<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
    <!-- Inscription -->
    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>servlet.inscription.InscriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>

    <!-- Verification de l'inscription -->
    <servlet>
        <servlet-name>CheckInscriptionServlet</servlet-name>
        <servlet-class>servlet.checkInscription.CheckInscriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckInscriptionServlet</servlet-name>
        <url-pattern>/checkSubscribe</url-pattern>
    </servlet-mapping>
</web-app>